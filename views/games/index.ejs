<% layout('layouts/boilerplate') %>
<h1>All Games</h1>

<div class="row">
  <% for (let game of games) { %>
  <div class="col-12 col-sm-6 col-md-4 col-lg-3 gy-1 mb-3">
    <div class="card text-center h-100" id="game-card">
      <% if(game.images.length) { %>
      <img crossorigin="anonymous" class="card-img-top" src="<%= game.images[0].url %>" alt="Main image related to the game" />
      <% } else { %>
      <img crossorigin="anonymous" class="card-img-top" src="https://res.cloudinary.com/dkyxbnxxo/image/upload/v1682626794/GameTracker/Default%20Assets/koxqbv34wtrbty3ghdp7_buavxo.jpg" alt="Default video game themed photo" />
      <% } %>
      <div class="card-body">
        <h5 class="card-title"><%= game.title %></h5>
        <h6 class="card-subtitle"><%= game.platform %></h6>
        <p class="card-text">
          <small class="text-muted">Beaten in <%= game.year %></small>
        </p>
        <a href="/games/<%= game._id %>" class="stretched-link"></a>
      </div>
    </div>
  </div>
  <% } %>
</div>
