<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= game.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h4 class="card-title"><%= game.title %></h4>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Beaten by <%= game.author.username %> in <%= game.year %></li>
        <li class="list-group-item">Played on <%= game.platform %></li>
      </ul>
      <% if(game.note) { %>
      <div class="card-body">
        <h6 class="card-title">Notes:</h6>
        <p class="card-text"><%= game.note %></p>
      </div>
      <% } %> <% if(currentUser && game.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/games/<%= game._id %>/edit">Edit</a>
        <form class="d-inline" action="/games/<%= game._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser) { %>
    <h2>Write a Review</h2>
    <form class="mb-3 validated-form" action="/games/<%= game._id %>/reviews" method="POST" novalidate>
      <div class="mt-3">
        <fieldset class="starability-grow">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review (200 characters max)</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" maxlength="200" required></textarea>
        <div class="invalid-feedback">Review cannot be blank.</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>
    <h4>Community Reviews</h4>
    <% for (let review of game.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= review.author.username %></h5>
        <p class="starability-result" data-rating="<%= review.rating %>">Rated: <%= review.rating %> stars</p>
        <p class="card-text">Review: <%= review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <form action="/games/<%= game._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
