<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= game.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h4 class="card-title"><%= game.title %></h4>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Beaten by <%= game.author.username %> in <%= game.year %></li>
        <li class="list-group-item">Played on <%= game.platform %></li>
      </ul>
      <% if(game.note) { %>
      <div class="card-body">
        <h6 class="card-title">Notes:</h6>
        <p class="card-text"><%= game.note %></p>
      </div>
      <% } %> <% if(currentUser && game.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/games/<%= game._id %>/edit">Edit</a>
        <form class="d-inline" action="/games/<%= game._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser) { %>
    <h2>Write a Review</h2>
    <form class="mb-3 validated-form" action="/games/<%= game._id %>/reviews" method="POST" novalidate>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" min="0" max="10" id="rating" name="review[rating]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
        <div class="invalid-feedback">Review cannot be blank.</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>
    <h4>Community Reviews</h4>
    <% for (let review of game.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username %></h6>
        <p class="card-text">Review: <%= review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <form action="/games/<%= game._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
